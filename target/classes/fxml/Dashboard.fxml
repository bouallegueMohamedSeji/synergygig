<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.DashboardController" styleClass="window-root">

    <!-- TOP BAR -->
    <top>
        <VBox spacing="0">
            <fx:include source="components/TitleBar.fxml"/>
            
            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="topbar">
                <padding><Insets top="8" right="16" bottom="8" left="16"/></padding>

                <Label fx:id="welcomeLabel" text="Welcome" styleClass="topbar-welcome"/>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox fx:id="themeToggleTrack" styleClass="theme-toggle-track" alignment="CENTER_LEFT"
                      spacing="0" onMouseClicked="#toggleTheme">
                    <padding><Insets top="3" right="3" bottom="3" left="3"/></padding>
                    <Label text="â˜€" styleClass="theme-toggle-icon-sun"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Region fx:id="themeToggleThumb" styleClass="theme-toggle-thumb"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="â˜¾" styleClass="theme-toggle-icon-moon"/>
                </HBox>
                <Label fx:id="roleLabel" text="ROLE" styleClass="topbar-role-badge"/>
            </HBox>
        </VBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <VBox fx:id="sidebar" spacing="1" styleClass="sidebar" prefWidth="210">
            <padding><Insets top="6" right="8" bottom="8" left="8"/></padding>

            <!-- App branding -->
            <HBox spacing="8" alignment="CENTER_LEFT" styleClass="sidebar-brand">
                <padding><Insets top="4" right="10" bottom="10" left="10"/></padding>
                <Label text="â¬¡" styleClass="sidebar-brand-icon"/>
                <Label text="SynergyGig" styleClass="sidebar-brand-name"/>
            </HBox>

            <Separator styleClass="card-separator"/>

            <Label text="OVERVIEW" styleClass="sidebar-section-title"/>

            <Button fx:id="btnDashboard" text="â—ˆ  Dashboard" onAction="#showDashboardHome"
                    styleClass="sidebar-btn" maxWidth="Infinity" alignment="CENTER_LEFT"/>

            <!-- Admin Only -->
            <Label fx:id="adminSectionLabel" text="ADMIN" styleClass="sidebar-section-title"
                   managed="false" visible="false"/>

            <Button fx:id="btnManageUsers" text="â—‰  Users" onAction="#showManageUsers"
                    styleClass="sidebar-btn" maxWidth="Infinity" alignment="CENTER_LEFT"
                    managed="false" visible="false"/>

            <!-- HR Only -->
            <Label fx:id="hrSectionLabel" text="HR" styleClass="sidebar-section-title"
                   managed="false" visible="false"/>

            <Button fx:id="btnHrDashboard" text="â—Ž  HR Dashboard" onAction="#showHrDashboard"
                    styleClass="sidebar-btn" maxWidth="Infinity" alignment="CENTER_LEFT"
                    managed="false" visible="false"/>

            <!-- Modules -->
            <Label text="MODULES" styleClass="sidebar-section-title"/>

            <Button fx:id="btnMessages" text="â—ˆ  Messages" onAction="#showMessages"
                    styleClass="sidebar-btn" maxWidth="Infinity" alignment="CENTER_LEFT"/>

            <Button fx:id="btnRecruitment" text="â—ˆ  Interviews" onAction="#showRecruitment"
                    styleClass="sidebar-btn" maxWidth="Infinity" alignment="CENTER_LEFT"
                    managed="false" visible="false"/>

            <Button fx:id="btnHrAdmin" text="â—ˆ  HR Admin" onAction="#showPlaceholder"
                    styleClass="sidebar-btn" maxWidth="Infinity" alignment="CENTER_LEFT"
                    managed="false" visible="false"/>

            <Button fx:id="btnProjects" text="â—ˆ  Projects" onAction="#showPlaceholder"
                    styleClass="sidebar-btn" maxWidth="Infinity" alignment="CENTER_LEFT"
                    managed="false" visible="false"/>

            <Button fx:id="btnTraining" text="â—ˆ  Training" onAction="#showPlaceholder"
                    styleClass="sidebar-btn" maxWidth="Infinity" alignment="CENTER_LEFT"/>

            <Button fx:id="btnCommunity" text="â—ˆ  Community" onAction="#showPlaceholder"
                    styleClass="sidebar-btn" maxWidth="Infinity" alignment="CENTER_LEFT"/>
            
            <!-- Spacer pushes user card to bottom -->
            <Region VBox.vgrow="ALWAYS"/>
            
            <!-- User info card at bottom of sidebar (clickable â€” shows popup) -->
            <VBox fx:id="sidebarUserCard" styleClass="sidebar-user-card" spacing="4" onMouseClicked="#toggleUserMenu">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <VBox styleClass="avatar-circle" alignment="CENTER" minWidth="32" minHeight="32" maxWidth="32" maxHeight="32">
                        <Label fx:id="sidebarAvatarInitial" text="U" styleClass="avatar-initial" style="-fx-font-size: 13;"/>
                    </VBox>
                    <VBox spacing="1">
                        <Label fx:id="sidebarUserName" text="User" styleClass="sidebar-user-name"/>
                        <Label fx:id="sidebarUserEmail" text="email@example.com" styleClass="sidebar-user-email"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="â–¸" style="-fx-text-fill: #7a7a8e; -fx-font-size: 12;"/>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <!-- MAIN CONTENT AREA -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <padding><Insets top="20" right="24" bottom="20" left="24"/></padding>

            <!-- Default: Dashboard Home -->
            <ScrollPane fx:id="dashboardScroll" fitToWidth="true" 
                        style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <VBox fx:id="dashboardHome" spacing="24" alignment="TOP_LEFT">

                <!-- Header -->
                <VBox spacing="4">
                    <Label fx:id="dashboardTitle" text="Dashboard" styleClass="content-title"/>
                    <Label fx:id="dashboardSubtitle" text="Overview of your workspace" styleClass="content-subtitle"/>
                </VBox>

                <!-- Stats Cards Row -->
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <!-- Card: Total Users -->
                    <VBox styleClass="stat-card" HBox.hgrow="ALWAYS" spacing="8">
                        <HBox alignment="CENTER_LEFT" spacing="0">
                            <Label text="Total Users" styleClass="stat-label"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="ðŸ‘¥" style="-fx-font-size: 20;"/>
                        </HBox>
                        <Label fx:id="statTotalUsers" text="0" styleClass="stat-value"/>
                        <Label fx:id="statTotalUsersTrend" text="All registered accounts" styleClass="stat-trend"/>
                    </VBox>

                    <!-- Card: Active Employees -->
                    <VBox styleClass="stat-card" HBox.hgrow="ALWAYS" spacing="8">
                        <HBox alignment="CENTER_LEFT" spacing="0">
                            <Label text="Employees" styleClass="stat-label"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="ðŸ’¼" style="-fx-font-size: 20;"/>
                        </HBox>
                        <Label fx:id="statEmployees" text="0" styleClass="stat-value"/>
                        <Label fx:id="statEmployeesTrend" text="Employees &amp; project owners" styleClass="stat-trend"/>
                    </VBox>

                    <!-- Card: Gig Workers -->
                    <VBox styleClass="stat-card" HBox.hgrow="ALWAYS" spacing="8">
                        <HBox alignment="CENTER_LEFT" spacing="0">
                            <Label text="Gig Workers" styleClass="stat-label"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="âš¡" style="-fx-font-size: 20;"/>
                        </HBox>
                        <Label fx:id="statGigWorkers" text="0" styleClass="stat-value"/>
                        <Label fx:id="statGigWorkersTrend" text="Freelance contributors" styleClass="stat-trend"/>
                    </VBox>

                    <!-- Card: Interviews -->
                    <VBox styleClass="stat-card" HBox.hgrow="ALWAYS" spacing="8">
                        <HBox alignment="CENTER_LEFT" spacing="0">
                            <Label text="Interviews" styleClass="stat-label"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="ðŸ“…" style="-fx-font-size: 20;"/>
                        </HBox>
                        <Label fx:id="statInterviews" text="0" styleClass="stat-value"/>
                        <Label fx:id="statInterviewsTrend" text="Scheduled sessions" styleClass="stat-trend"/>
                    </VBox>
                </HBox>

                <!-- Two column layout: Quick Actions + Recent Activity -->
                <HBox spacing="12">
                    
                    <!-- Quick Actions Card -->
                    <VBox styleClass="dashboard-card" HBox.hgrow="ALWAYS" spacing="0">
                        <VBox styleClass="dashboard-card-header" spacing="2">
                            <Label text="Quick Actions" styleClass="dashboard-card-title"/>
                            <Label text="Jump to common tasks" styleClass="dashboard-card-description"/>
                        </VBox>
                        <VBox styleClass="dashboard-card-content" spacing="8">
                            <Button text="Open Messages" onAction="#showMessages"
                                    styleClass="btn-secondary" maxWidth="Infinity"/>
                            <Button text="Schedule Interview" onAction="#showRecruitment"
                                    styleClass="btn-secondary" maxWidth="Infinity"/>
                            <Button text="Edit Profile" onAction="#showProfile"
                                    styleClass="btn-secondary" maxWidth="Infinity"/>
                        </VBox>
                    </VBox>

                    <!-- Your Account Card -->
                    <VBox styleClass="dashboard-card" HBox.hgrow="ALWAYS" spacing="0">
                        <VBox styleClass="dashboard-card-header" spacing="2">
                            <Label text="Your Account" styleClass="dashboard-card-title"/>
                            <Label text="Account information" styleClass="dashboard-card-description"/>
                        </VBox>
                        <VBox styleClass="dashboard-card-content" spacing="12">
                            <HBox spacing="12" alignment="CENTER_LEFT">
                                <VBox styleClass="avatar-circle" alignment="CENTER" minWidth="40" minHeight="40" maxWidth="40" maxHeight="40">
                                    <Label fx:id="avatarInitial" text="U" styleClass="avatar-initial"/>
                                </VBox>
                                <VBox spacing="2">
                                    <Label fx:id="accountName" text="User Name" styleClass="account-name"/>
                                    <Label fx:id="accountEmail" text="user@example.com" styleClass="account-email"/>
                                </VBox>
                            </HBox>
                            <Separator styleClass="card-separator"/>
                            <HBox spacing="8" alignment="CENTER_LEFT">
                                <Label text="Role" styleClass="stat-label"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label fx:id="statRole" text="-" styleClass="topbar-role-badge"/>
                            </HBox>
                            <HBox spacing="8" alignment="CENTER_LEFT">
                                <Label text="Member since" styleClass="stat-label"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label fx:id="accountCreatedAt" text="-" styleClass="account-meta"/>
                            </HBox>
                        </VBox>
                    </VBox>

                </HBox>

                <!-- Platform Overview Card -->
                <VBox styleClass="dashboard-card" spacing="0">
                    <VBox styleClass="dashboard-card-header" spacing="2">
                        <Label text="Platform Overview" styleClass="dashboard-card-title"/>
                        <Label text="System-wide statistics and activity" styleClass="dashboard-card-description"/>
                    </VBox>
                    <VBox styleClass="dashboard-card-content" spacing="10">
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Chat Rooms" styleClass="stat-label"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="statChatRooms" text="0" styleClass="account-meta"/>
                        </HBox>
                        <Separator styleClass="card-separator"/>
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Total Messages" styleClass="stat-label"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="statMessages" text="0" styleClass="account-meta"/>
                        </HBox>
                        <Separator styleClass="card-separator"/>
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Pending Interviews" styleClass="stat-label"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="statPendingInterviews" text="0" styleClass="account-meta"/>
                        </HBox>
                    </VBox>
                </VBox>
                
            </VBox>
            </ScrollPane>
        </StackPane>
    </center>

</BorderPane>
