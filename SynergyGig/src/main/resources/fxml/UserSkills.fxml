<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UserSkillsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="My Earned Skills" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <TableView fx:id="skillsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colSkillName" text="Skill Name" prefWidth="200.0" />
            <TableColumn fx:id="colSkillLevel" text="Proficiency Level" prefWidth="150.0" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>
