<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.QuestionController">
    <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#goBack" text="â† Back to Quizzes" />
            <Label fx:id="quizTitleLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Manage Questions" />
        </HBox>
        
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <!-- Form Section -->
            <VBox fx:id="formContainer" spacing="10.0" prefWidth="350.0" style="-fx-background-color: #f4f4f4; -fx-padding: 15; -fx-background-radius: 5;">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Add / Edit Question" />
                
                <Label text="Question Text" />
                <TextArea fx:id="questionArea" prefHeight="80.0" promptText="Enter question text" wrapText="true" />
                
                <Label text="Option A" />
                <TextField fx:id="optionAField" promptText="Option A" />
                
                <Label text="Option B" />
                <TextField fx:id="optionBField" promptText="Option B" />
                
                <Label text="Option C" />
                <TextField fx:id="optionCField" promptText="Option C" />
                
                <Label text="Correct Option" />
                <ComboBox fx:id="correctOptionComboBox" promptText="Select Correct Option" prefWidth="150.0" />
                
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button fx:id="btnClear" mnemonicParsing="false" onAction="#clearForm" text="Clear" />
                    <Button fx:id="btnSave" mnemonicParsing="false" onAction="#saveQuestion" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Save" />
                </HBox>
                <Label fx:id="statusLabel" textFill="RED" wrapText="true" />
            </VBox>
            
            <!-- Table Section -->
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <TableView fx:id="questionTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colText" prefWidth="250.0" text="Question" />
                        <TableColumn fx:id="colOptionA" prefWidth="100.0" text="A" />
                        <TableColumn fx:id="colOptionB" prefWidth="100.0" text="B" />
                        <TableColumn fx:id="colOptionC" prefWidth="100.0" text="C" />
                        <TableColumn fx:id="colCorrect" prefWidth="60.0" text="Answer" />
                    </columns>
                </TableView>
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#deleteQuestion" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Delete Selected" />
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
