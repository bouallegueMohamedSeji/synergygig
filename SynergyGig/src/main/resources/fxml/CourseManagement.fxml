<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CourseController">
    <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Course Management" />
        
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <!-- Form Section -->
            <VBox fx:id="formContainer" spacing="10.0" prefWidth="300.0" style="-fx-background-color: #f4f4f4; -fx-padding: 15; -fx-background-radius: 5;">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Add / Edit Course" />
                
                <Label text="Title" />
                <TextField fx:id="titleField" promptText="Enter course title" />
                
                <Label text="Description" />
                <TextArea fx:id="descriptionArea" prefHeight="100.0" promptText="Enter course description" wrapText="true" />
                
                <Label text="Instructor ID" />
                <TextField fx:id="instructorIdField" promptText="Enter instructor ID" />
                
                <Label text="Skill" />
                <ComboBox fx:id="skillComboBox" promptText="Select Associated Skill" prefWidth="270.0" />
                
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button fx:id="btnClear" mnemonicParsing="false" onAction="#clearForm" text="Clear" />
                    <Button fx:id="btnSave" mnemonicParsing="false" onAction="#saveCourse" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Save" />
                </HBox>
                <Label fx:id="statusLabel" textFill="RED" />
            </VBox>
            
            <!-- Table Section -->
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <TableView fx:id="courseTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colTitle" prefWidth="200.0" text="Title" />
                        <TableColumn fx:id="colDescription" prefWidth="300.0" text="Description" />
                        <TableColumn fx:id="colInstructor" prefWidth="100.0" text="Instructor ID" />
                    </columns>
                </TableView>
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#deleteCourse" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Delete Selected" />
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
