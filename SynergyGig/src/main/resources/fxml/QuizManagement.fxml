<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.QuizController">
    <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Quiz Management" />
        
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <!-- Form Section -->
            <VBox fx:id="formContainer" spacing="10.0" prefWidth="300.0" style="-fx-background-color: #f4f4f4; -fx-padding: 15; -fx-background-radius: 5;">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Add / Edit Quiz" />
                
                <Label text="Course" />
                <ComboBox fx:id="courseComboBox" promptText="Select Course" prefWidth="270.0" />
                
                <Label text="Quiz Title" />
                <TextField fx:id="titleField" promptText="Enter quiz title" />
                
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button fx:id="btnClear" mnemonicParsing="false" onAction="#clearForm" text="Clear" />
                    <Button fx:id="btnSave" mnemonicParsing="false" onAction="#saveQuiz" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Save" />
                </HBox>
                <Label fx:id="statusLabel" textFill="RED" wrapText="true" />
            </VBox>
            
            <!-- Table Section -->
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <TableView fx:id="quizTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colCourse" prefWidth="200.0" text="Course" />
                        <TableColumn fx:id="colTitle" prefWidth="300.0" text="Title" />
                    </columns>
                </TableView>
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button fx:id="btnManageQuestions" mnemonicParsing="false" onAction="#manageQuestions" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Manage Questions" />
                    <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#deleteQuiz" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Delete Selected" />
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
