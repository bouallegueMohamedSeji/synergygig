<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.QuizTakingController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" style="-fx-padding: 20;">
        <top>
            <VBox spacing="10.0" alignment="CENTER_LEFT">
                <Button fx:id="btnBack" text="â† Back to Quizzes" onAction="#goBack"/>
                <Label fx:id="quizTitleLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Quiz Title" />
                <Label text="Answer all questions. Score 70% or higher to earn the skill." style="-fx-text-fill: #666;" />
            </VBox>
        </top>
        
        <center>
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                <VBox fx:id="questionsContainer" spacing="20.0" style="-fx-padding: 20;">
                    <!-- Questions will be added here dynamically -->
                </VBox>
            </ScrollPane>
        </center>
        
        <bottom>
            <VBox spacing="10.0" alignment="CENTER">
                <Label fx:id="resultLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <Button fx:id="btnSubmit" text="Submit Quiz" onAction="#submitQuiz" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;" />
            </VBox>
        </bottom>
    </BorderPane>
</AnchorPane>
