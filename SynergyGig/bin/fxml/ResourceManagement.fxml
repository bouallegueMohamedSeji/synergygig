<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ResourceController">
    <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Resource Management" />
        
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <!-- Form Section -->
            <VBox spacing="10.0" prefWidth="300.0" style="-fx-background-color: #f4f4f4; -fx-padding: 15; -fx-background-radius: 5;">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Add / Edit Resource" />
                
                <Label text="Course" />
                <ComboBox fx:id="courseComboBox" prefWidth="300.0" promptText="Select Course" />
                
                <Label text="Type" />
                <ComboBox fx:id="typeComboBox" prefWidth="300.0" promptText="Select Type (VIDEO/PDF)" />
                
                <Label text="URL" />
                <TextField fx:id="urlField" promptText="Enter resource URL" />
                
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button fx:id="btnClear" mnemonicParsing="false" onAction="#clearForm" text="Clear" />
                    <Button fx:id="btnSave" mnemonicParsing="false" onAction="#saveResource" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Save" />
                </HBox>
                <Label fx:id="statusLabel" textFill="RED" />
            </VBox>
            
            <!-- Table Section -->
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <TableView fx:id="resourceTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colCourseId" prefWidth="100.0" text="Course ID" />
                        <TableColumn fx:id="colType" prefWidth="100.0" text="Type" />
                        <TableColumn fx:id="colUrl" prefWidth="300.0" text="URL" />
                    </columns>
                </TableView>
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#deleteResource" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Delete Selected" />
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
