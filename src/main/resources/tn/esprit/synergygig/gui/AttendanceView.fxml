<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.synergygig.controllers.AttendanceController"
      spacing="20" style="-fx-padding: 30;">

    <Label text="Attendance Tracker" styleClass="text-black" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button text="ðŸ•’ Check In" onAction="#checkIn" styleClass="action-btn-dark"/>
        <Button text="ðŸšª Check Out" onAction="#checkOut" styleClass="action-btn-dark"/>
        
        <Label text="Filter Date:" styleClass="text-black"/>
        <DatePicker fx:id="dateFilter" promptText="Filter Date" onAction="#filterByDate" editable="false" styleClass="custom-date-picker"/>
        
        <CheckBox fx:id="viewAllCheck" text="View All (HR)" onAction="#toggleViewAll" styleClass="text-black"/>
    </HBox>

    <TableView fx:id="attendanceTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colDate" text="Date"/>
            <TableColumn fx:id="colCheckIn" text="Check In"/>
            <TableColumn fx:id="colCheckOut" text="Check Out"/>
            <TableColumn fx:id="colStatus" text="Status"/>
             <TableColumn fx:id="colUser" text="Employee"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>
