<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.synergygig.controllers.DepartmentController"
      spacing="20" style="-fx-padding: 30;">

    <Label text="Department Management" styleClass="section-title"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="deptNameField" promptText="Department Name" styleClass="text-field"/>
        <TextField fx:id="deptDescField" promptText="Description" styleClass="text-field"/>
        <TextField fx:id="deptBudgetField" promptText="Budget ($)" prefWidth="100" styleClass="text-field"/>
        <ComboBox fx:id="managerCombo" promptText="Select Manager" prefWidth="150"/>
        <Button text="Add Department" onAction="#addDepartment" styleClass="action-btn"/>
        
        <!-- Spacer -->
        <HBox HBox.hgrow="ALWAYS" />

        <!-- Search Bar -->
        <HBox styleClass="InputContainer">
             <TextField fx:id="searchField" promptText="Search.." styleClass="input"/>
        </HBox>

        <!-- Sort Button -->
        <Button fx:id="sortButton" text="Sort Name â‡…" onAction="#toggleSort" styleClass="action-btn"/>
    </HBox>

    <TableView fx:id="departmentTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID"/>
            <TableColumn fx:id="colName" text="Name"/>
            <TableColumn fx:id="colDesc" text="Description"/>
            <TableColumn fx:id="colBudget" text="Budget"/>
            <TableColumn fx:id="colManager" text="Manager"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    
    <HBox spacing="10">
        <Button text="Delete Selected" onAction="#deleteDepartment" style="-fx-background-color: #ff4d4d; -fx-text-fill: white;"/>
    </HBox>

</VBox>
