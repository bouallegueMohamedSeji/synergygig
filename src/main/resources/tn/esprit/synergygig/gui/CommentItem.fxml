<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Circle?>

<HBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.synergygig.controllers.CommentItemController"
      spacing="10"
      maxWidth="Infinity"
      style="-fx-padding: 5;">

    <!-- Small Avatar -->
    <Circle radius="15" fill="#555555" />

    <!-- Bubble -->
    <VBox spacing="2" HBox.hgrow="ALWAYS" 
          style="-fx-background-color: #2c3e50; -fx-background-radius: 15; -fx-padding: 10;">
        
        <HBox spacing="5" alignment="CENTER_LEFT">
             <Label fx:id="authorLabel" text="User Name" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;"/>
             <Label fx:id="dateLabel" text="2 mins ago" style="-fx-text-fill: #888888; -fx-font-size: 10px;"/>
             <Region HBox.hgrow="ALWAYS" />
             <HBox fx:id="actionBox" spacing="5" visible="false">
                 <Label text="Edit" style="-fx-text-fill: #396afc; -fx-cursor: hand; -fx-font-size: 10px;" onMouseClicked="#onEdit"/>
                 <Label text="Delete" style="-fx-text-fill: #e74c3c; -fx-cursor: hand; -fx-font-size: 10px;" onMouseClicked="#onDelete"/>
             </HBox>
        </HBox>

        <Label fx:id="contentLabel" text="Comment content..." 
               style="-fx-text-fill: #dddddd; -fx-font-size: 13px;" 
               wrapText="true"/>

        <!-- Edit Form (Initially Hidden) -->
        <VBox fx:id="editContainer" spacing="5" visible="false" managed="false">
            <TextArea fx:id="editArea" wrapText="true" prefHeight="60"/>
            <HBox spacing="5" alignment="CENTER_RIGHT">
                <Button text="Cancel" onAction="#onCancelEdit" style="-fx-background-color: transparent; -fx-text-fill: #888888;"/>
                <Button text="Save" onAction="#onSaveEdit" style="-fx-background-color: #396afc; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </VBox>

</HBox>
