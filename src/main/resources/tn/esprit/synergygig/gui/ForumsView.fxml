<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #0f172a;" stylesheets="@app.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.synergygig.controllers.ForumsController">
   <children>
      <!-- Header Section -->
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-border-color: #1e293b; -fx-border-width: 0 0 1 0; -fx-padding: 20 30;">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label text="Community Forums" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
                  <Label text="Discuss, share, and connect with other professionals." textFill="#94a3b8">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#showAddForum" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 10 20; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(59,130,246,0.3), 10, 0, 0, 4);" text="+ New Topic" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>

      <!-- Search & Filters (Optional Placeholder for Future) -->
      <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-padding: 20 30 10 30;">
         <children>
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1e293b; -fx-background-radius: 8; -fx-padding: 5 15;" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="ðŸ”" textFill="#94a3b8" />
                  <TextField fx:id="searchField" onKeyTyped="#onSearch" promptText="Search discussions..." style="-fx-background-color: transparent; -fx-text-fill: white; -fx-prompt-text-fill: #64748b;" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <Button style="-fx-background-color: #1e293b; -fx-text-fill: #94a3b8; -fx-background-radius: 8; -fx-cursor: hand;" text="Filter">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button style="-fx-background-color: #1e293b; -fx-text-fill: #94a3b8; -fx-background-radius: 8; -fx-cursor: hand;" text="Sort">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>

      <!-- Forums List -->
      <ListView fx:id="forumsListView" style="-fx-background-color: transparent; -fx-padding: 10 20;" VBox.vgrow="ALWAYS">
         <styleClass>
            <String fx:value="list-view" />
            <String fx:value="edge-to-edge" />
         </styleClass>
      </ListView>
   </children>
</VBox>
