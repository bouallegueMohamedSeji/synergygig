<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="tn.esprit.synergygig.controllers.ForumDetailController"
           stylesheets="@app.css"
           styleClass="root-pane">

    <VBox spacing="20" style="-fx-padding: 30;">
        
        <!-- Back Button & Header -->
        <HBox spacing="10" alignment="CENTER_LEFT">
             <Button text="â† Back" onAction="#goBack" styleClass="button-secondary"/>
             <Label fx:id="titleLabel" text="Forum Title" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" wrapText="true"/>
        </HBox>

        <!-- Content -->
        <VBox style="-fx-background-color: #1a2236; -fx-padding: 20; -fx-background-radius: 10;">
             <Label fx:id="userDateLabel" text="Posted by User on Date" style="-fx-text-fill: #888888; -fx-font-size: 12px;"/>
             <Label fx:id="contentLabel" text="Content goes here..." style="-fx-text-fill: white; -fx-font-size: 16px;" wrapText="true"/>
        </VBox>

        <!-- Comments Section -->
        <Label text="Comments" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        
        <ListView fx:id="commentsListView" VBox.vgrow="ALWAYS" styleClass="custom-list-view"/>

        <!-- Add Comment -->
        <HBox spacing="10">
            <TextField fx:id="commentField" promptText="Write a comment..." HBox.hgrow="ALWAYS" styleClass="text-field"/>
            <Button text="Post" onAction="#addComment" styleClass="action-btn"/>
        </HBox>

    </VBox>

</StackPane>
