<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.synergygig.controllers.ProfileController" styleClass="dashboard-root">
    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <Label text="User Profile" styleClass="title" />

    <Label fx:id="roleLabel" text="Role: " textFill="GRAY" style="-fx-font-size: 14px;" />

    <VBox spacing="5" maxWidth="300">
        <Label text="Full Name" />
        <TextField fx:id="fullNameField" />
    </VBox>

    <VBox spacing="5" maxWidth="300">
        <Label text="Email" />
        <TextField fx:id="emailField" editable="false" />
    </VBox>

    <VBox spacing="5" maxWidth="300">
        <Label text="Password" />
        <PasswordField fx:id="passwordField" />
    </VBox>

    <Button text="Save Changes" onAction="#handleSave" prefWidth="300" styleClass="btn-primary"/>

    <Label fx:id="messageLabel" />

</VBox>
