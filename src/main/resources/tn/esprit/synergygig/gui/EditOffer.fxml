<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           alignment="CENTER"
           styleClass="galaxy-background"
           fx:controller="tn.esprit.synergygig.controllers.EditOfferController">

    <!-- ðŸŒŒ Galaxy Stars -->
    <Pane fx:id="animatedBackground"/>

    <!-- Glass Card -->
    <VBox spacing="25"
          maxWidth="550"
          alignment="TOP_CENTER"
          styleClass="glass-card">

        <!-- TITLE -->
        <Label text="âœ Edit Offer"
               styleClass="title-galaxy"/>

        <!-- FORM -->
        <GridPane hgap="20" vgap="18">

            <columnConstraints>
                <ColumnConstraints percentWidth="15"/>
                <ColumnConstraints percentWidth="75"/>
            </columnConstraints>

            <Label text="Title"
                   styleClass="label-galaxy"
                   GridPane.halignment="RIGHT"/>

            <TextField fx:id="titleField"
                       promptText="Enter title"
                       GridPane.columnIndex="1"/>

            <Label text="Description"
                   styleClass="label-galaxy"
                   GridPane.rowIndex="1"
                   GridPane.halignment="RIGHT"/>

            <TextArea fx:id="descriptionField"
                      prefRowCount="3"
                      promptText="Enter description"
                      GridPane.columnIndex="1"
                      GridPane.rowIndex="1"/>

            <Label text="Type"
                   styleClass="label-galaxy"
                   GridPane.rowIndex="2"
                   GridPane.halignment="RIGHT"/>

            <ComboBox fx:id="typeBox"
                      GridPane.columnIndex="1"
                      GridPane.rowIndex="2"/>

            <Label text="Status"
                   styleClass="label-galaxy"
                   GridPane.rowIndex="3"
                   GridPane.halignment="RIGHT"/>

            <ComboBox fx:id="statusBox"
                      GridPane.columnIndex="1"
                      GridPane.rowIndex="3"/>

        </GridPane>

        <!-- BUTTONS -->
        <HBox spacing="25" alignment="CENTER">
            <Button text="ðŸ’¾ Save"
                    onAction="#handleSave"
                    styleClass="btn-galaxy-primary"/>

            <Button text="âœ– Cancel"
                    onAction="#handleCancel"
                    styleClass="btn-galaxy-danger"/>
        </HBox>

    </VBox>

</StackPane>
