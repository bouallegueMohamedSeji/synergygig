<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.synergygig.controllers.SignupController" styleClass="root" stylesheets="@app.css">
    
    <Label text="Create Account" styleClass="title" />
    <Label text="Join SynergyGig today" style="-fx-text-fill: #94a3b8; -fx-font-size: 14px;" />

    <VBox spacing="5" maxWidth="350">
        <Label text="Full Name" />
        <TextField fx:id="fullNameField" promptText="John Doe" />
    </VBox>

    <VBox spacing="5" maxWidth="350">
        <Label text="Email" />
        <TextField fx:id="emailField" promptText="john@example.com" />
    </VBox>

    <VBox spacing="5" maxWidth="350">
        <Label text="Password" />
        <PasswordField fx:id="passwordField" promptText="*******" />
    </VBox>

    <VBox spacing="5" maxWidth="350">
        <Label text="Role" />
        <ComboBox fx:id="roleComboBox" promptText="Select Role" prefWidth="350" styleClass="combo-box"/>
    </VBox>

    <Label fx:id="errorLabel" textFill="#ef4444" />

    <Button text="Sign Up" onAction="#handleSignup" styleClass="btn-primary" prefWidth="350"/>
    
    <HBox alignment="CENTER" spacing="5">
        <Label text="Already have an account?" style="-fx-text-fill: #94a3b8;" />
        <Hyperlink text="Login" onAction="#handleLoginLink" style="-fx-text-fill: #3b82f6; -fx-font-weight: bold;"/>
    </HBox>

</VBox>
