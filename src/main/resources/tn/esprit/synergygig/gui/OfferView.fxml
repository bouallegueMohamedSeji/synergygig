<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<VBox
        xmlns="http://javafx.com/javafx/21"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="tn.esprit.synergygig.controllers.OfferController"
        spacing="15"
        style="-fx-padding: 20;">

    <!-- ================= TABLE ================= -->
    <StackPane VBox.vgrow="ALWAYS">

        <Pane fx:id="animatedBackground"/>

        <VBox style="-fx-padding: 30;">

            <TableView fx:id="offerTable"
                       VBox.vgrow="ALWAYS"
                       styleClass="table-dark">

                <columns>
                    <TableColumn fx:id="colTitle" text="Title"/>
                    <TableColumn fx:id="colDescription" text="Description" />
                    <TableColumn fx:id="colType" text="Type" />
                    <TableColumn fx:id="colStatus" text="Status" />
                    <TableColumn fx:id="colAmount" text="Amount"/>
                    <TableColumn fx:id="colActions" text="Actions" />
                </columns>

            </TableView>

        </VBox>

    </StackPane>


    <!-- ================= ADD OFFER (ONE LINE) ================= -->
    <HBox spacing="10"
          alignment="CENTER_LEFT"
          style="-fx-padding: 10;
                 -fx-background-color: #f9f9f9;
                 -fx-background-radius: 8;">

        <TextField fx:id="titleField"
                   promptText="Title"
                   prefWidth="220"/>

        <TextField fx:id="descriptionField"
                   promptText="Description"
                   prefWidth="350"/>

        <ComboBox fx:id="typeBox"
                  promptText="Type"
                  prefWidth="160"/>

        <Button text="ðŸ“· Upload" onAction="#handleUploadImage"/>
        <ImageView fx:id="previewImage" fitHeight="60" fitWidth="60"/>

        <Button text="âž• Add Offer"
                prefWidth="140"
                onAction="#addOffer"/>

    </HBox>

</VBox>
