<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.synergygig.controllers.UserListController"
      spacing="20" style="-fx-padding: 30;">

    <Label text="User Directory" styleClass="section-title"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="ADD EMPLOYEE" onAction="#showAddUserDialog" styleClass="space-btn"/>

        <!-- Spacer to push search/sort to right or keep left? User asked for "navbar", let's keep it consistent with Dept view -->
        <HBox HBox.hgrow="ALWAYS" />

        <!-- Search Bar -->
        <HBox styleClass="InputContainer">
             <TextField fx:id="searchField" promptText="Search.." styleClass="input"/>
        </HBox>

        <!-- Sort Button -->
        <Button fx:id="sortButton" text="Sort Name â‡…" onAction="#toggleSort" styleClass="action-btn"/>
    </HBox>

    <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" text="Full Name"/>
            <TableColumn fx:id="colEmail" text="Email"/>
            <TableColumn fx:id="colRole" text="Role"/>
            <TableColumn fx:id="colDepartment" text="Department"/>
            <TableColumn fx:id="colGigs" text="Active Gigs"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>
