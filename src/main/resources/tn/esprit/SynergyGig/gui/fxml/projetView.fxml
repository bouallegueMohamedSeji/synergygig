<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox
        xmlns="http://javafx.com/javafx/21"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="tn.esprit.SynergyGig.Controller.ProjetController"
        spacing="20"
        styleClass="main-content"
        VBox.vgrow="ALWAYS">

    <!-- ========== TITRE PAGE ========== -->
    <HBox alignment="CENTER_LEFT" spacing="12">
        <Label text="ðŸš€ Gestion des Projets"
               styleClass="page-title"/>
    </HBox>

    <!-- ========== CARD FORMULAIRE ========== -->
    <VBox spacing="14" styleClass="galaxy-card">

        <Label text="âœ¦ Nouveau Projet"
               styleClass="card-title"/>

        <!-- Ligne 1 : Nom + Statut + Budget -->
        <HBox spacing="16" alignment="CENTER_LEFT">

            <!-- Nom -->
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Nom du projet *" styleClass="form-label"/>
                <TextField fx:id="nomField"
                           promptText="Ex: Application Mobile SynergyGig"
                           styleClass="galaxy-field"/>
            </VBox>

            <!-- Statut -->
            <VBox spacing="5" minWidth="160">
                <Label text="Statut *" styleClass="form-label"/>
                <ComboBox fx:id="statutBox"
                          promptText="SÃ©lectionner..."
                          prefWidth="160"
                          styleClass="galaxy-combo"/>
            </VBox>

            <!-- Budget -->
            <VBox spacing="5" minWidth="140">
                <Label text="Budget (TND) *" styleClass="form-label"/>
                <TextField fx:id="budgetField"
                           promptText="Ex: 5000"
                           prefWidth="140"
                           styleClass="galaxy-field"/>
            </VBox>

        </HBox>

        <!-- Ligne 2 : Dates + Boutons -->
        <HBox spacing="16" alignment="CENTER_LEFT">

            <!-- Date dÃ©but -->
            <VBox spacing="5" minWidth="180">
                <Label text="Date de dÃ©but *" styleClass="form-label"/>
                <DatePicker fx:id="dateDebutPicker"
                            promptText="SÃ©lectionner..."
                            prefWidth="180"
                            styleClass="galaxy-date"/>
            </VBox>

            <!-- Date fin -->
            <VBox spacing="5" minWidth="180">
                <Label text="Date de fin *" styleClass="form-label"/>
                <DatePicker fx:id="dateFinPicker"
                            promptText="SÃ©lectionner..."
                            prefWidth="180"
                            styleClass="galaxy-date"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Boutons -->
            <VBox alignment="BOTTOM_RIGHT" spacing="4">
                <Label text=" "/>
                <HBox spacing="10">
                    <Button fx:id="btnAjouter"
                            text="âœ¦ Ajouter"
                            onAction="#ajouterProjet"
                            prefWidth="140"
                            styleClass="btn-add"/>
                    <Button text="â†º RÃ©initialiser"
                            onAction="#annulerModification"
                            prefWidth="140"
                            styleClass="btn-reset"/>
                </HBox>
            </VBox>

        </HBox>

        <Label text="* Champs obligatoires" styleClass="required-note"/>

    </VBox>

    <!-- ========== CARD TABLEAU ========== -->
    <VBox spacing="12" styleClass="galaxy-card" VBox.vgrow="ALWAYS">

        <Label text="â—ˆ Liste des Projets"
               styleClass="card-title"/>

        <TableView fx:id="projetTable"
                   VBox.vgrow="ALWAYS"
                   styleClass="galaxy-table">
            <columns>
                <TableColumn fx:id="colId"
                             text="ID"
                             prefWidth="50"
                             style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colNom"
                             text="Nom du Projet"
                             prefWidth="220"/>
                <TableColumn fx:id="colStatut"
                             text="Statut"
                             prefWidth="110"
                             style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colBudget"
                             text="Budget (TND)"
                             prefWidth="120"
                             style="-fx-alignment: CENTER_RIGHT;"/>
                <TableColumn fx:id="colDateDebut"
                             text="Date DÃ©but"
                             prefWidth="110"
                             style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colDateFin"
                             text="Date Fin"
                             prefWidth="110"
                             style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colActions"
                             text="Actions"
                             prefWidth="320"/>
            </columns>

            <placeholder>
                <Label text="Aucun projet â€” ajoutez-en un !"
                       style="-fx-text-fill: rgba(232,234,246,0.3);
                              -fx-font-size: 14px;"/>
            </placeholder>
        </TableView>

    </VBox>

</VBox>
