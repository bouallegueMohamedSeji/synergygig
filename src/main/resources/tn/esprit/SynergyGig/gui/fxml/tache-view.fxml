<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.SynergyGig.Controller.TacheController"
      spacing="20"
      style="-fx-background-color: #f0f2f5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- HEADER -->
    <HBox alignment="CENTER_LEFT">
        <Label fx:id="labelProjet"
               text="Taches du projet"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>

    <Separator/>

    <!-- FORMULAIRE -->
    <VBox spacing="15"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

        <Label text="+ Nouvelle Tache"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

        <!-- Ligne 1 : Titre + Priorite + Statut + ID Employe -->
        <HBox spacing="12" alignment="CENTER_LEFT">

            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Titre *" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <TextField fx:id="titreField"
                           promptText="Ex: Developper le module login"
                           prefWidth="250"
                           style="-fx-border-color: #ddd; -fx-border-radius: 5px;
                                  -fx-background-radius: 5px; -fx-padding: 8px;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Priorite *" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <ComboBox fx:id="prioriteBox"
                          promptText="Priorite..."
                          prefWidth="130"
                          style="-fx-border-color: #ddd; -fx-border-radius: 5px;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Statut *" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <ComboBox fx:id="statutBox"
                          promptText="Statut..."
                          prefWidth="130"
                          style="-fx-border-color: #ddd; -fx-border-radius: 5px;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="ID Employe *" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <TextField fx:id="employeIdField"
                           promptText="Ex: 3"
                           prefWidth="100"
                           style="-fx-border-color: #ddd; -fx-border-radius: 5px;
                                  -fx-background-radius: 5px; -fx-padding: 8px;"/>
            </VBox>

        </HBox>

        <!-- Ligne 2 : Description + Date debut + Date fin + Boutons -->
        <HBox spacing="12" alignment="CENTER_LEFT">

            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Description" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <TextField fx:id="descriptionField"
                           promptText="Ex: Implementer JWT..."
                           prefWidth="250"
                           style="-fx-border-color: #ddd; -fx-border-radius: 5px;
                                  -fx-background-radius: 5px; -fx-padding: 8px;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Date debut *" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <DatePicker fx:id="dateDebutPicker"
                            promptText="Selectionner..."
                            prefWidth="175"
                            style="-fx-border-color: #ddd; -fx-border-radius: 5px;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Date fin *" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <DatePicker fx:id="dateFinPicker"
                            promptText="Selectionner..."
                            prefWidth="175"
                            style="-fx-border-color: #ddd; -fx-border-radius: 5px;"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>

            <VBox spacing="5" alignment="BOTTOM_RIGHT">
                <Label text=" "/>
                <HBox spacing="10">
                    <Button fx:id="btnAjouter"
                            text="+ Ajouter"
                            onAction="#ajouterTache"
                            prefWidth="140"
                            style="-fx-background-color: #3498db; -fx-text-fill: white;
                                   -fx-font-weight: bold; -fx-font-size: 14px;
                                   -fx-padding: 10px; -fx-background-radius: 6px;
                                   -fx-cursor: hand;"/>

                    <Button text="Reinitialiser"
                            onAction="#annulerModification"
                            prefWidth="140"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white;
                                   -fx-font-weight: bold; -fx-font-size: 14px;
                                   -fx-padding: 10px; -fx-background-radius: 6px;
                                   -fx-cursor: hand;"/>
                </HBox>
            </VBox>

        </HBox>

        <Label text="* Champs obligatoires"
               style="-fx-text-fill: #999; -fx-font-size: 11px;"/>
    </VBox>

    <!-- TABLEAU -->
    <VBox spacing="10" VBox.vgrow="ALWAYS"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

        <Label text="Liste des Taches"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

        <TableView fx:id="tacheTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId"       text="ID"         prefWidth="50"/>
                <TableColumn fx:id="colTitre"     text="Titre"      prefWidth="220"/>
                <TableColumn fx:id="colPriorite"  text="Priorite"   prefWidth="90"/>
                <TableColumn fx:id="colStatut"    text="Statut"     prefWidth="110"/>
                <TableColumn fx:id="colDateDebut" text="Date Debut" prefWidth="110"/>
                <TableColumn fx:id="colDateFin"   text="Date Fin"   prefWidth="110"/>
                <TableColumn fx:id="colProjetId"  text="Projet ID"  prefWidth="80"/>
                <TableColumn fx:id="colActions"   text="Actions"    prefWidth="200"/>
            </columns>

            <placeholder>
                <Label text="Aucune tache pour ce projet. Ajoutez-en une !"
                       style="-fx-text-fill: #999; -fx-font-size: 14px;"/>
            </placeholder>
        </TableView>
    </VBox>

</VBox>
