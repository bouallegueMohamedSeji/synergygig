<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane
        xmlns="http://javafx.com/javafx/21"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="tn.esprit.SynergyGig.Controller.MainLayoutController"
        stylesheets="@/tn/esprit/SynergyGig/gui/fxml/galaxy.css"
        style="-fx-background-color: #0a0e1a;">

    <!-- ============ SIDEBAR (GAUCHE) ============ -->
    <left>
        <fx:include fx:id="sidebar" source="sidebar.fxml"/>
    </left>

    <!-- ============ CONTENU PRINCIPAL ============ -->
    <center>
        <VBox style="-fx-background-color: #0a0e1a;">

            <!-- HEADER en haut -->
            <fx:include fx:id="header" source="header.fxml"/>

            <!-- Zone de contenu dynamique -->
            <StackPane fx:id="contentArea" VBox.vgrow="ALWAYS"
                       style="-fx-background-color: #0a0e1a;"/>

        </VBox>
    </center>

</BorderPane>
